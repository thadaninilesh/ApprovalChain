<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thadaninilesh.approvalchain">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ==========================Splash Activity as Launcher============================== -->
        <activity
            android:name=".MainActivitySplash"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".EmployeeActivity"
            android:label="@string/title_activity_employee"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ManagerActivity"
            android:label="@string/title_activity_manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BossActivity"
            android:label="@string/title_activity_boss"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
